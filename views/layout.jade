doctype html
html
  head
    title= "APP"
    link(href="/stylesheets/bootstrap.min.css", rel="stylesheet", integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u", crossorigin="anonymous")
    link(href="/stylesheets/bootstrap-theme.min.css" rel="stylesheet")
    link(href="/stylesheets/list.css" rel="stylesheet")
    link(href="/stylesheets/style.css" rel="stylesheet")

    script(src='/javascripts/jquery.min.js')
    script(src='/javascripts/bootstrap.min.js')
  body
    block navbar
        nav.navbar.navbar-default
            .container-fluid
                // Brand and toggle get grouped for better mobile display
                .navbar-header
                    button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='/') Home
                // Collect the nav links, forms, and other content for toggling
                #bs-example-navbar-collapse-1.collapse.navbar-collapse
                    ul.nav.navbar-nav
                        li
                            a(href='#')
                                | Current tasks
                                span.sr-only (current)
                        li
                            a(href='/tasks') All lists

                    form.navbar-form.navbar-left
                        .form-group
                            input.form-control(type='text', placeholder='Search')
                        button.btn.btn-default(type='submit') Submit
                    ul.nav.navbar-nav.navbar-right
                        li.Profile
                            a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                                | Profile
                                span.caret
                            ul.dropdown-menu
                                li
                                    a(href='#') Modify

                                li.divider(role='separator')
                                li
                                    a(href='#') Deconnexion
                // /.navbar-collapse
            // /.container-fluid
    block content


